@import "fuentes.styl"

blanco = rgba(255,255,255,0.9)
body
	background blanco
.configuracion-cuenta
	border-radius 20px
	background #222
	color blanco
	position relative
	right 2.5em
	float right
	height 600px
	text-align center
	width 60%

	.configuracion
		background transparent
		height 100%
		width 100%

		.configuracion-izquierda
			background transparent
			margin 0
			width 49%

			input 
				display block
				margin 1.5em
				width 80%

			input[type="text"]
				color black
				border-radius 5px
				border solid 1px #222
			input[type="submit"]
				color black
				width 40%
				position relative
				float right
				bottom 0

		.configuracion-derecha
			background #222
			margin 0
			width 49%

			figure
				position relative
				left 25%
				margin 0 0 4em 0
				width 40%
				img
					border-radius 50%
					width 100%
			input
				color black
				border-radius 5px
				border solid 1px #222
				display block
				margin 1.5em
				width 80%

		.configuracion-derecha, .configuracion-izquierda
			display inline-block
			position relative
			top 1em
			height 70%
			margin 0
			vertical-align top


	.configuracion-titulo
		font-style italic

		

.contenedor
	position relative
	background transparent
	width 100%

.datos-usuario-principal
	border-radius 20px
	background #222
	text-align center
	position absolute
	left 2.5em
	height 600px
	width 25%

	.acciones-usuario
		bottom 22%
		background transparent
		position absolute
		width 100%
		ul 
			list-style none
			margin 0
			padding 0
			width 100%
			li 
				width 100%
				a
					color blanco
					display inline-block
					font-style italic
					text-decoration none
					padding 1em 0
					width 100%
					&:hover
						color black
						background blanco
						width 100%
	.datos-usuario
		position absolute
		background transparent
		top 38%
		width 100%

		.datos
			display block
			border-bottom 1px solid blanco
			color blanco
			text-decoration none
			text-align left
			width 100%
			&:hover
				color black
				background blanco
	.usuario-calificacion
		bottom 0
		position absolute
		background transparent
		width 100%
		.estrellita
			text-align center
			background transparent
			color blanco
			display inline-block
			font-size 1.8em
			width 15%
			&:hover
				color black
		p
			color blanco
			font-style italic

.datos-usuario-principal, .configuracion-cuenta
	top 2.5em
	vertical-align top
	display inline-block

.usuario-imagen
	left 25%
	margin 0
	background transparent
	top 0
	position absolute
	width 50%
	img
		border-radius 50%
		width 100%
	p
		color blanco
		font-style italic
		width 100%



